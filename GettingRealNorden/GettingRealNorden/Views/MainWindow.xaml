<Window x:Class="GettingRealNorden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GettingRealNorden"
        mc:Ignorable="d"
        Title="FlowLetter"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized" d:DesignHeight="704"
        WindowStartupLocation="CenterScreen" Width="1492"
        >

    <Viewbox Stretch="UniformToFill">
        <Grid Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="71*"/>
                <RowDefinition Height="145*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1000"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="200"/>

            </Grid.ColumnDefinitions>
            <Grid Grid.Column="4" Background="#FF719AE7" Grid.RowSpan="2">

            </Grid>

            <Grid Grid.Column="0" Background="#FF4B4B9E" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="12*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" >
                    <TextBlock x:Name="txtTitle" Foreground="White" Text="FLOWLETTER" FontSize="42" Width="200" FontFamily="Agency FB" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Vertical" Background="#FF719AE7">
                    <Button x:Name="btn_Newsletter" Cursor="Hand" Content="NYHEDSBREV" FontSize="20" FontFamily="Microsoft YaHei UI" Height="50" Width="200" VerticalAlignment="Top" BorderBrush="White" Background="LightBlue" Click="btn_Newsletter_Click" />
                    <Button x:Name="btn_Members" Cursor="Hand" Content="MEDLEMMER" FontSize="20" FontFamily="Microsoft YaHei UI" Height="50" Width="200" BorderBrush="White" Background="LightBlue" Click="btn_Members_Click" />
                </StackPanel>
                <Button Content="Log Ud" Cursor="Hand" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="2" Foreground="#FF535353" VerticalAlignment="Center" FontWeight="bold" BorderThickness="2" Background="LightBlue" BorderBrush="LightBlue"/>
                <Label Content="NORDEN Odense" HorizontalAlignment="Left" Margin="80,0,0,0" Grid.Row="2" VerticalAlignment="Center" FontWeight="ExtraBold" Foreground="white" FontStyle="Italic"/>

                <!--<ListBox Grid.Row="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Title"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>-->
            </Grid>
            <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="157" />
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Image x:Name="img_NordenBanner"
                           Source="C:\Users\jeppe\Desktop\Getting Real Projekt\NORDEN Odense banner.jpg"
                          Stretch="Fill"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Height="157"
                          Width="1000"/>

                </Grid>

                <Grid Grid.Row="1">
                    <Button x:Name="btn_CreateNewsletterDialog" 
                        Content="Nyt Dokument" 
                        HorizontalAlignment="Right" 
                        Height="20" Width=" 100" Margin="0,45,171,426" 
                        Click="btn_CreateNewsletterDialog_Click" 
                        Foreground="Black" Background="LightBlue" BorderBrush="Black" 
                        Cursor="Hand" />

                    <TextBox x:Name="txtNewsletterDraft" 
                         Text="Databind Nyhedsbrev skrevet hertil" 
                         Cursor="IBeam" 
                         Background="White" BorderBrush="darkGray" 
                         VerticalAlignment="Center" HorizontalAlignment="Center" 
                         Height="329" Width="579" 
                         BorderThickness="3"/>
                </Grid>
            </Grid>



        </Grid>
    </Viewbox>

</Window>
